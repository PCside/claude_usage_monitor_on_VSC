{
  "manifest_version": 3,
  "name": "Claude Usage Monitor",
  "version": "1.0.0",
  "description": "Monitor Claude.ai usage and send data to VS Code extension",
  "permissions": [
    "alarms",
    "storage"
  ],
  "host_permissions": [
    "https://claude.ai/*",
    "http://localhost:19876/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
